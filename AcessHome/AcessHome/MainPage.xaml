<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AcessHome.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fontAwesome="clr-namespace:FontAwesome"
    Title="Inicio"
    Shell.FlyoutBehavior="Flyout">

    <StackLayout>

        <Frame BorderColor="Transparent">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="1"
                    Padding="30,10,10,0"
                    FontAttributes="Bold"
                    FontSize="Title"
                    HorizontalOptions="StartAndExpand"
                    Text="AcessHome"
                    TextColor="#414141" />


                <Image
                    Grid.Column="0"
                    Margin="0,0,-40,10"
                    Source="puertacerrada.png" />
            </Grid>

        </Frame>

        <BoxView Color="Transparent" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Frame
                Grid.ColumnSpan="3"
                Margin="10,0,10,0"
                BorderColor="Silver"
                CornerRadius="10">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Button
                        Grid.ColumnSpan="4"
                        BackgroundColor="Black"
                        Command="{Binding ConectarCommand}"
                        Text="{x:Static fontAwesome:FontAwesomeIcons.BluetoothB}"
                        TextColor="White"
                        FontSize="25"
                        FontFamily="FAB"
                        CornerRadius="25" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        BackgroundColor="Green"
                        Command="{Binding ConectarCommand}"
                        IsEnabled="{Binding BtnEnabled}"
                        Text="{x:Static fontAwesome:FontAwesomeIcons.Unlock}"
                        FontFamily="FAS"
                        FontSize="25"
                        TextColor="Black"
                        CornerRadius="25" />
                    <Button
                        Grid.Column="2"
                        Grid.Row="1"
                        BackgroundColor="Red"
                        Command="{Binding CerrarCommand}"
                        IsEnabled="{Binding BtnEnabled}"
                        Text="{x:Static fontAwesome:FontAwesomeIcons.Lock}"
                        TextColor="Black"
                        FontSize="25"
                        FontFamily="FAS"
                        CornerRadius="25" />

                </Grid>

            </Frame>
        </Grid>
    </StackLayout>

</ContentPage>
